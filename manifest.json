{
    "name": "Zapptales",
    "author": "Eagle19243",
    "version": "1.0.0",
    "manifest_version": 2,
    "minimum_chrome_version": "49",
    "incognito": "not_allowed",
    "description": "Extension which allows to scrape the customer's chat and upload that information to the backend",
    "content_security_policy": "script-src 'self' https://apis.google.com 'unsafe-eval'; object-src 'self'",
    "background": {
        //   "scripts": ["public/background.min.js"],
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://web.whatsapp.com/"],
            "js": ["vendor/jquery.min.js", "js/content.js"],
            "run_at": "document_end",
            "all_frames": true,
            "match_about_blank": true
        }
    ],
    "browser_action" : {
        "default_icon": "img/icon_disabled.png",
        "default_title": "Zapptales"
    },
    "icons" : {
        "16" : "img/icon_disabled.png",
        "22" : "img/icon_disabled.png",
        "32" : "img/icon_disabled.png",
        "48" : "img/icon_disabled.png",
        "128": "img/icon_disabled.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "img/icon.png"
    ]
}